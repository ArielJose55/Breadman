<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BreadmanPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>breadman.logica.modelo.entidades.Lote</class>
    <class>breadman.logica.modelo.entidades.Venta</class>
    <class>breadman.logica.modelo.entidades.Panadero</class>
    <class>breadman.logica.modelo.entidades.Producto</class>
    <class>breadman.logica.modelo.entidades.Proveedor</class>
    <class>breadman.logica.modelo.entidades.Inventario</class>
    <class>breadman.logica.modelo.entidades.OrdenProduccion</class>
    <class>breadman.logica.modelo.entidades.Ingrediente</class>
    <class>breadman.logica.modelo.entidades.Insumo</class>
    <class>breadman.logica.modelo.entidades.Vendedor</class>
    <class>breadman.logica.modelo.entidades.SolicitudDeCompra</class>
    <class>breadman.logica.modelo.entidades.Categoria</class>
    <class>breadman.logica.modelo.entidades.OrdenDeCompraInsumo</class>
    <class>breadman.logica.modelo.entidades.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/breadman?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
